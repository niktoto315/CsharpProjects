        <StackPanel HorizontalAlignment="Left" Height="53" VerticalAlignment="Top" Width="144" Margin="125,161,0,0">
            <ComboBox x:Name="listgame" HorizontalAlignment="Left" VerticalAlignment="Top" Width="144" SelectedIndex="0">
                <ComboBoxItem x:Name="S" Content="Single"/>
                <ComboBoxItem x:Name="M" Content="Multi"/>
                <ComboBoxItem x:Name="PCc" Content="PvPC"/>
