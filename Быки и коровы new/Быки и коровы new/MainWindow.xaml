        xmlns:local="clr-namespace:Быки_и_коровы_new"
        mc:Ignorable="d"
        Title="Главная" Height="300" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center" ResizeMode="NoResize" Closing="Window_Closing">
